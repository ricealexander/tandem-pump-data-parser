{
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true
  },
  "editor.insertSpaces": true,
  "editor.tabSize": 2,

  "eslint.alwaysShowStatus": true,

  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  "search.exclude": {
    "**/.cache/": true,
    "**/.git": true,
    "**/dist": true,
    "**/node_modules": true
  }
}
